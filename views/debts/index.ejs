<%- include('../layouts/main', { body: `
  <h1 class="text-2xl font-semibold mb-4">Debts</h1>

  <div class="bg-white p-4 rounded shadow overflow-x-auto">
    <table class="min-w-full text-sm">
      <thead><tr class="text-left border-b">
        <th class="p-2">Name</th><th class="p-2">Principal</th><th class="p-2">Interest Next</th><th class="p-2">Principal Next</th><th class="p-2">Projected</th>
      </tr></thead>
      <tbody>
        ${payoff.schedule.map(d => `
          <tr class="border-b">
            <td class="p-2">${d.name}</td>
            <td class="p-2">IDR ${numberFormat(d.principal)}</td>
            <td class="p-2">IDR ${numberFormat(d.interestNextMonth)}</td>
            <td class="p-2">IDR ${numberFormat(d.principalNextMonth)}</td>
            <td class="p-2">IDR ${numberFormat(d.projectedPrincipal)}</td>
          </tr>
        `).join('')}
      </tbody>
    </table>
  </div>

  <div class="bg-white p-4 rounded shadow mt-4">
    <div class="font-medium">Totals</div>
    <div class="flex gap-6">
      <div>Principal: IDR ${numberFormat(payoff.totals.principal)}</div>
      <div>Interest (next): IDR ${numberFormat(payoff.totals.interestNextMonth)}</div>
      <div>Principal (next): IDR ${numberFormat(payoff.totals.principalNextMonth)}</div>
    </div>
  </div>
` }) %>
