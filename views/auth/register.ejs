<%- include('../layouts/main', { body: `
  <div class="max-w-md mx-auto bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-semibold mb-4">Create your account</h1>
    <form action="/auth/register?_csrf=${csrfToken}" method="post" class="space-y-3">
      <div>
        <label class="block text-sm">Name</label>
        <input name="name" required class="w-full border p-2 rounded">
      </div>
      <div>
        <label class="block text-sm">Email</label>
        <input name="email" type="email" required class="w-full border p-2 rounded">
      </div>
      <div>
        <label class="block text-sm">Password</label>
        <input name="password" type="password" required minlength="8" class="w-full border p-2 rounded">
      </div>
      <button class="w-full bg-gray-900 text-white py-2 rounded">Register</button>
    </form>
    <p class="mt-4 text-sm">Already have an account? <a class="underline" href="/auth/login">Login</a></p>
  </div>
` }) %>
